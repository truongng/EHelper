<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thksoft.e_helper.MainActivity">

    <Button
        android:id="@+id/button_part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="29dp"
        android:text="Part 1"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="416dp" />

    <Button
        android:id="@+id/button_part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_part1"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button_part1"
        android:text="Part 2" />

    <Button
        android:id="@+id/button_part3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_part2"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/button_part2"
        android:text="Part 3" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_part1"
        android:layout_below="@+id/button_part1"
        android:layout_marginTop="19dp"
        android:text="Select All" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_part3"
        android:layout_alignTop="@+id/checkBox"
        android:text="Stop" />

</RelativeLayout>

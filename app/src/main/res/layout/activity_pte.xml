<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="thksoft.e_helper.PteActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:text="RS"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="416dp" />

            <Button
                android:id="@+id/button_asq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button_rs"
                android:layout_centerHorizontal="true"
                android:text="ASQ" />

            <Button
                android:id="@+id/button_dic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button_rs"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="DIC" />

            <Button
                android:id="@+id/button_showQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/button_dic"
                android:layout_below="@+id/button_dic"
                android:text="Show Q" />

            <Button
                android:id="@+id/button_showAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_dic"
                android:layout_below="@+id/button_showQuestion"
                android:text="Show A" />

            <Spinner
                android:id="@+id/cbCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/button_asq"
                android:layout_alignStart="@+id/button_rs"
                android:layout_alignTop="@+id/button_showQuestion" />

            <Button
                android:id="@+id/button_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_rs"
                android:layout_below="@+id/button_showQuestion"
                android:text="Start" />

            <Button
                android:id="@+id/button_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_asq"
                android:layout_below="@+id/button_showQuestion"
                android:text="Repeat" />

            <CheckBox
                android:id="@+id/chkChoseRandomly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_asq"
                android:layout_below="@+id/button_repeat"
                android:text="Chose Randomly" />

            <TextView
                android:id="@+id/tvQuestionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_rs"
                android:layout_below="@+id/chkChoseRandomly"
                android:layout_marginTop="15dp"
                android:text="Question:" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/button_dic"
                android:layout_alignStart="@+id/tvQuestionText"
                android:layout_below="@+id/tvQuestionText"
                android:background="@drawable/back"
                android:inputType="textMultiLine"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvAnswerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvQuestionText"
                android:layout_below="@+id/tvQuestion"
                android:layout_marginTop="16dp"
                android:text="Answer:" />

            <EditText
                android:id="@+id/etAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvQuestion"
                android:layout_alignStart="@+id/tvQuestionText"
                android:layout_below="@+id/tvAnswerText"
                android:background="@drawable/back"
                android:inputType="textMultiLine"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvResultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_asq"
                android:layout_below="@+id/etAnswer"
                android:layout_marginTop="16dp"
                android:text="Result:"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/etAnswer"
                android:layout_alignTop="@+id/tvResultText"
                android:text="Check" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
